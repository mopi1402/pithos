{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@kanon/*": ["../../pithos/src/kanon/*"],
      "@pithos/kanon": ["../../pithos/src/kanon"],
      "@pithos/arkhe/*": ["../../pithos/src/arkhe/*"],
      "@pithos/zygos/*": ["../../pithos/src/zygos/*"]
    }
  },
  "include": ["src"]
}
