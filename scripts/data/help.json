    "analyze:bundle": {
      "description": "Analyze bundle size",
      "category": "Analyze"
    },
    "analyze:treeshaking": {
      "description": "Test Kanon tree-shaking with bundle visualizer",
      "category": "Analyze"
    },
    "prepublishOnly": {
      "description": "Script executed before npm publish",
      "category": "Publish"
    },
    "benchmark:kanon": {
      "description": "Run benchmarks for kanon module",
      "category": "Benchmark",
      "flags": [
        {
          "type": "radio",
          "name": "suite",
          "description": "Benchmark suite",
          "defaultValue": "realworld",
          "options": [
            { "label": "ðŸŽ¯ Real-world only", "value": "realworld", "args": ["realworld"] },
            { "label": "Full comparison", "value": "full" }
          ]
        },
        {
          "type": "radio",
          "name": "libs",
          "description": "Libraries to compare",
          "options": [
            { "label": "default (Kanon vs Zod)", "value": "" },
            { "label": "Kanon versions", "value": "kanon", "args": ["jit,v3"] },
            { "label": "âš¡ all libs", "value": "all", "args": ["all"] },
            { "label": "custom:", "value": "custom" }
          ]
        },
        {
          "type": "text",
          "name": "custom",
          "description": "Custom libs list",
          "placeholder": "e.g. kanon,zod,valibot",
          "prefix": ""
        },
        {
          "type": "checkbox",
          "name": "report",
          "description": "Generate JSON report for website",
          "args": ["--report"]
        }
      ]
    },
    "benchmark:kanon:perf": {
      "description": "Run Kanon performance benchmarks (optimization decisions)",
      "category": "Benchmark"
    },
    "benchmark:arkhe": {
      "description": "Run benchmarks for arkhe module (vs es-toolkit, lodash-es)",
      "category": "Benchmark",
      "flags": [
        {
          "type": "checkbox",
          "name": "report",
          "description": "Generate JSON report for website",
          "script": "doc:generate:arkhe:benchmarks-results"
        }
      ]
    },
    "benchmark:taphos": {
      "description": "Run benchmarks for taphos module (vs es-toolkit, lodash-es)",
      "category": "Benchmark",
      "flags": [
        {
          "type": "checkbox",
          "name": "report",
          "description": "Generate JSON report for website",
          "script": "doc:generate:taphos:benchmarks-results"
        }
      ]
    }
